extends _base

block body
  .jumbo
    .container
      .jumbotron
        p.hidden-sm.hidden-xs
          img(src='./images/backbone-http-logo-large.png')
        p.hidden-lg.hidden-md
          img(src='./images/backbone-http-logo-small.png')
        p.subtitle An HTTP interface for BackboneORM
        .row
          .col-lg-6.col-md-6
            h2 Install
            pre
              code
                | npm install backbone-http
          .col-lg-6.col-md-6
            h2 Get the client JavaScript
            a.btn.btn-lg(href='https://raw.github.com/vidigami/backbone-http/0.5.0/client/backbone-http.zip', target='_blank') Download Latest (0.5.0)

  .container.main
    include examples/backbone-http/_introduction
    include examples/backbone-http/_module_systems
