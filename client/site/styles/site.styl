@import 'nib'
@import 'colors'

// Typography //

//Header//

.navbar
  background: bg
  position: fixed
  top: 0
  right: 0
  left: 0
  z-index: 10
  box-shadow: 0 1px 8px rgba(0,0,0,0.5)
  border: 0
  .lizard
    padding: 7px 10px 0

ul.nav.navbar-nav
  li
    a
      padding: 15px 8px
      color: text_darker
    &.active
      a
        background-color: vidi_green
        color: text_lightest

  .dropdown-menu
    > li
      > a
        padding: 3px 20px
        &:hover
          color: text_lightest
          background-color: vidi_green
          background-image: none

// Main //
.container.main
  padding-bottom: 350px

.row
  width: 100%
  padding: 0
  margin: 0
  &.block
    margin-top: 20px

// Jumbo //
.jumbo
  margin-top: 50px
  color: text_lightest
  background: vidi_green
  .container
    .jumbotron
      border-radius: 0
      text-align: center
      background: vidi_green
      .subtitle
        margin-top: 20px
      .btn
        color: text_lightest
        background: vidi_orange
        &:hover
          color: text_lightest
          background: vidi_darkorange



// Examples //
.language-toggle
  margin-top: 20px
  i
    margin-left: 5px

pre
  overflow: auto
  code
    white-space: pre
    display: inline-block

p > code
  white-space: normal

// Buttons //
.btn
  background: vidi_green
  border-color: vidi_hovergreen
  color: text_lightest
  &:hover
    color: text_lightest
    background: vidi_hovergreen

  &.btn-lg
    height: 40px
    font-size: 18px
    line-height: 18px
    margin-bottom: 20px
  &.btn-xl
    height: 80px
    font-size: 36px
    line-height: 65px
    margin-bottom: 40px
    padding: 6px 36px
